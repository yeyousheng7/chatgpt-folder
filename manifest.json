{
  "manifest_version": 3,
  "name": "ChatGPT Folders",
  "version": "0.1.0",
  "description": "Add folder-based categorization to ChatGPT conversations without moving originals.",
  "permissions": ["storage"],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
      ],
      "js": ["content-script.js"],
      "css": ["content-style.css"],
      "run_at": "document_idle"
    }
  ]
}
